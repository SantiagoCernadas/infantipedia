<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaysActivity.ColorPlayActivity"
    android:background="@drawable/backgroundabc"
    android:backgroundTint="#40000000"
    android:backgroundTintMode="src_over">

    <ImageView
        android:id="@+id/txt_color_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_palabraplay_opc"
        android:layout_below="@+id/txt_colorplay_titulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:tintMode="src_atop"
        app:tint="#EDAFAFAF"
        tools:srcCompat="@drawable/mejmanzana" />

    <TextView
        android:id="@+id/txt_colorplay_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_color_puntos"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/grandstanderdos"
        android:gravity="center_horizontal"
        android:shadowColor="#888a8a"
        android:shadowDx="5"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="¿Que color?"
        android:textColor="#000000"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/txt_pista_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#888a8a"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="tiene 7 letras"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_pista_color_cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#888a8a"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="3"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_pista_color"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/grandstanderdos"
        android:onClick="getPista"
        android:shadowColor="#888a8a"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="¿?"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txt_color_vidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginRight="0sp"
        android:background="#80FFFFFF"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Vidas = 3"
        android:textColor="#ff6961"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_color_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="#80FFFFFF"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Puntos = 0"
        android:textColor="#77dd77"
        android:textSize="40sp" />

    <TableLayout
        android:id="@+id/layout_palabraplay_opc"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_above="@+id/button_pista_color"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton_border_mini">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_amarillo_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#FFEB3B"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_celeste_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#00BCD4"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_rojo_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#DA0000"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_verde_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#8BC34A"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_naranja_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#FF9800"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_negro_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#000000"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_blanco_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_marron_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#6C3B2A"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button_rosa_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#FF0080"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_azul_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#0037A4"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_morado_play"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#673AB7"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_opc4"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/boton_border_mini"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/grandstanderdos"
                android:onClick="opcionPresionada"
                android:shadowColor="#888a8a"
                android:shadowDx="3"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:textSize="20sp"
                android:visibility="invisible" />

        </TableRow>

    </TableLayout>
</RelativeLayout>