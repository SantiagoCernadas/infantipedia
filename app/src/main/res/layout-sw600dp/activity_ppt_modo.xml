<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundjuego"
    tools:context=".PptModoActivity"
    android:backgroundTint="#40000000"
    android:backgroundTintMode="src_over">

    <TextView
        android:id="@+id/txt_play_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/grandstanderclean"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:textColor="#84b6f4"
        android:textSize="40sp"
        tools:text="Piedra papel o tijeras" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txt_play_title"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button19"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:layout_weight="1"
            android:backgroundTint="#BAF5A9"
            android:background="@drawable/boton_border"
            android:contentDescription="@string/txt_vacio"
            android:fontFamily="@font/grandstanderclean"
            android:onClick="modoCpu"
            android:shadowColor="#888a8a"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Jugador vs Duxi"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:layout_weight="1"
            android:backgroundTint="#FFF3A6"
            android:background="@drawable/boton_border"
            android:contentDescription="@string/txt_vacio"
            android:fontFamily="@font/grandstanderclean"
            android:onClick="dosJugadores"
            android:shadowColor="#888a8a"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Jugador 1 vs jugador 2"
            android:textSize="35sp" />
    </LinearLayout>

</RelativeLayout>