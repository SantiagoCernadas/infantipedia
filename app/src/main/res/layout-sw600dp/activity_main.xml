<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainb"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="match_parent"
        android:layout_height="476dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-108dp"
        android:contentDescription="@string/txt_img_ej"
        app:srcCompat="@drawable/infantipedialogo" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250sp"
        android:fontFamily="@font/grandstanderdos"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="@string/txt_Bienvenida"
        android:textColor="#F8A69A"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="350sp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="#F8CA9A"
            android:fontFamily="@font/grandstanderclean"
            android:onClick="activity_abecedario"
            android:padding="15sp"
            android:shadowColor="#888a8a"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/button_abecedario"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="#BAF5A9"
            android:fontFamily="@font/grandstanderclean"
            android:onClick="activity_matematicas"
            android:padding="15sp"
            android:shadowColor="#888a8a"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/button_math"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="#9FADEE"
            android:fontFamily="@font/grandstanderclean"
            android:onClick="activity_animales"
            android:padding="15sp"
            android:shadowColor="#888a8a"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/button_animales"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="#CF9FEE"
            android:fontFamily="@font/grandstanderclean"
            android:onClick="activity_dibujo"
            android:padding="15sp"
            android:shadowColor="#888a8a"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/button_juegos"
            android:textSize="35sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="705dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="3dp"
        android:text="@string/txt_version"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/iv_musica"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5sp"
        android:background="#FFF3A6"
        android:onClick="modificarEstadoMusica"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        app:tint="#000000" />

    <ImageButton
        android:id="@+id/iv_musica_off"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5sp"
        android:layout_marginLeft="5sp"
        android:layout_marginBottom="5sp"
        android:background="#F8A69A"
        android:onClick="modificarEstadoMusica"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_lock_silent_mode"
        app:tint="#000000" />

</RelativeLayout>