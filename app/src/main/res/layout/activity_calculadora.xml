<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CalculadoraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginLeft="30sp"
            android:layout_weight="0"
            android:fontFamily="@font/grandstanderclean"
            android:gravity="center"
            android:maxLength="2"
            android:text="@string/txt_vacio"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_signo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="0"
            android:fontFamily="@font/grandstanderclean"
            android:gravity="center"
            android:text="@string/txt_vacio"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="0"
            android:fontFamily="@font/grandstanderclean"
            android:gravity="center"
            android:maxLength="2"
            android:text="@string/txt_vacio"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_igual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_weight="0"
            android:fontFamily="@font/grandstanderclean"
            android:gravity="center"
            android:text="@string/txt_vacio"
            android:textColor="#000000"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/txt_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0sp"
            android:layout_marginLeft="0sp"
            android:layout_weight="0"
            android:fontFamily="@font/grandstanderclean"
            android:gravity="center"
            android:text="@string/txt_vacio"
            android:textColor="#000000"
            android:textSize="50sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button_num1"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270sp"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal1"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num2"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270sp"
        android:layout_toEndOf="@+id/button_num1"
        android:layout_toRightOf="@+id/button_num1"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal2"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num3"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="270sp"
        android:layout_toEndOf="@+id/button_num2"
        android:layout_toRightOf="@+id/button_num2"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal3"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num4"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal4"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num5"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num2"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@+id/button_num4"
        android:layout_toRightOf="@+id/button_num4"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal5"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num6"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num3"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@+id/button_num5"
        android:layout_toRightOf="@+id/button_num5"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal6"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num7"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal7"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num8"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num5"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@+id/button_num7"
        android:layout_toRightOf="@+id/button_num7"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal8"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num9"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num6"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@+id/button_num8"
        android:layout_toRightOf="@+id/button_num8"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal9"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_num0"
        android:layout_width="268dp"
        android:layout_height="75dp"
        android:layout_below="@+id/button_num8"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#9FADEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="numPresionado"
        android:text="@string/button_cal0"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button20"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:layout_toEndOf="@+id/button_num3"
        android:layout_toRightOf="@+id/button_num3"
        android:background="#ff6961"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="Retroceder"
        android:text="@string/button_cal_borrar" />

    <Button
        android:id="@+id/button21"
        android:layout_width="100sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button20"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/button_num6"
        android:layout_toRightOf="@+id/button_num6"
        android:background="#ff6961"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="borrarTodo"
        android:text="@string/button_cal_borrartodo" />

    <Button
        android:id="@+id/button23"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_below="@+id/button21"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/button_num9"
        android:layout_toRightOf="@+id/button_num9"
        android:background="#77dd77"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="calcular"
        android:text="@string/button_cal_res"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_sign_sumar"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num0"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:background="#9FEEEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="asignarSigno"
        android:text="+"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_sign_restar"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num0"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@+id/button_sign_sumar"
        android:layout_toRightOf="@+id/button_sign_sumar"
        android:background="#9FEEEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="asignarSigno"
        android:text="-"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_sign_mult"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@+id/button_num0"
        android:layout_marginStart="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@+id/button_sign_restar"
        android:layout_toRightOf="@+id/button_sign_restar"
        android:background="#9FEEEE"
        android:fontFamily="@font/grandstanderclean"
        android:onClick="asignarSigno"
        android:text="x"
        android:textSize="22sp" />

</RelativeLayout>