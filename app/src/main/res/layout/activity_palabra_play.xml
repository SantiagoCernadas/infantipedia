<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundabc"
    tools:context=".PlaysActivity.PalabraPlayActivity">

    <TextView
        android:id="@+id/txt_palabra_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/grandstanderdos"
        android:gravity="center_horizontal"
        android:shadowColor="#888a8a"
        android:shadowDx="5"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="¿Que es?"
        android:textColor="#000000"
        android:textSize="35sp"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="60dp" />

    <ImageView
        android:id="@+id/txt_palabraplay_imagen"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="150dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button_opc1"
        android:layout_width="170sp"
        android:layout_height="70sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="450dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/grandstanderdos"
        android:onClick="opcionPresionada"
        android:shadowColor="#888a8a"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="gato"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_pista_palabra"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="654dp"
        android:background="@drawable/boton_redondo"
        android:fontFamily="@font/grandstanderdos"
        android:onClick="getPista"
        android:shadowColor="#888a8a"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="¿?"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_opc2"
        android:layout_width="170sp"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/grandstanderdos"
        android:onClick="opcionPresionada"
        android:shadowColor="#888a8a"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="koala"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_opc3"
        android:layout_width="170sp"
        android:layout_height="70sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="550dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/grandstanderdos"
        android:onClick="opcionPresionada"
        android:shadowColor="#888a8a"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="kiwi"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_opc4"
        android:layout_width="170sp"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/grandstanderdos"
        android:onClick="opcionPresionada"
        android:shadowColor="#888a8a"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="extraterrestre"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_palabra_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Puntos = 0"
        android:textColor="#77dd77"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_pista_palabra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126sp"
        android:layout_marginLeft="126sp"
        android:layout_marginTop="660dp"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#888a8a"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="tiene 7 letras"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_pista_palabra_cant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="663dp"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#888a8a"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="3"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_palabra_vidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginRight="0sp"
        android:fontFamily="@font/grandstanderclean"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="Vidas = 3"
        android:textColor="#ff6961"
        android:textSize="25sp" />
</RelativeLayout>